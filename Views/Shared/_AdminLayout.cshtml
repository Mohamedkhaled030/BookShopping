<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />
</head>
<body>
    <div class="main-container">

        <!-- Sidebar -->
        <div class="sidebar">
            <div class="logo">📚 Admin Panel</div>
            <a href="/Home/Index"><i class="bi bi-house-door"></i> <span>Home</span></a>
            <a href="/AdminOperations/AllOrders"><i class="bi bi-receipt"></i> <span>Orders</span></a>
            <a href="/Stock/Index"><i class="bi bi-archive"></i> <span>Stock</span></a>
            <a href="/Genre/Index"><i class="bi bi-collection"></i> <span>Genre</span></a>
            <a href="/Book/Index"><i class="bi bi-book"></i> <span>Books</span></a>
            <a href="/Book/TopSellingBooks"><i class="bi bi-bar-chart"></i> <span>Top Selling</span></a>
        </div>

        <!-- Right Panel -->
        <div class="right-panel">
            <!-- Navbar -->
            <nav class="navbar">
                <div>Welcome, @User.Identity?.Name</div>
                <div class="nav-actions">
                    <a href="/Identity/Account/Manage/Index"><i class="bi bi-gear"></i> Manage</a>
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="bi bi-box-arrow-left"></i> Logout
                        </button>
                    </form>
                </div>
            </nav>

            <!-- Content -->
            <div class="content">
                <div class="dashboard-cards">
                    <div class="card">
                        <h5>📦 Total Orders</h5>
                        <p>250</p>
                    </div>
                    <div class="card">
                        <h5>📚 Books in Stock</h5>
                        <p>500</p>
                    </div>
                    <div class="card">
                        <h5>👥 Users</h5>
                        <p>1200</p>
                    </div>
                    <div class="card">
                        <h5>💰 Sales</h5>
                        <p>$45,000</p>
                    </div>
                </div>

                <div class="my-3">
                    <partial name="_Notifications" />
                </div>
                @RenderBody()
            </div>
        </div>

    </div>
</body>

<!-- Bootstrap JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</html>
